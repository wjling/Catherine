<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:id="@+id/allBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <LinearLayout 
	        android:id="@+id/topBlock"
	        android:layout_width="match_parent"
	        android:layout_height="240dip"
	        android:orientation="vertical"
	        >
	        <RelativeLayout
	            android:id="@+id/topLoginBlock"
	            android:layout_width="match_parent"
	            android:layout_height="220dip"
	            android:background="#3ecc9d"
	            android:orientation="horizontal">
		            
                <TextView
                    android:id="@+id/signuphint"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"		 
		            android:textSize="15sp"       
		            android:textColor="#ffffff" 
		            android:text="@string/signuphint" 
		            android:layout_alignParentBottom="true"
					android:layout_alignParentLeft="true"
		            android:padding="5dip"/>		
           
               	<TextView
               	    android:id="@+id/loginText"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="48sp"  
	                android:textColor="#ffffff" 
	                android:text="Login" 
	                android:layout_alignParentBottom="true"
					android:layout_centerHorizontal="true"/>
               	       		                       
	        </RelativeLayout>
	        
	        <RelativeLayout 
	            android:id="@+id/secondBlock"
	            android:layout_width="match_parent"
	            android:layout_height="20dip"
	            android:background="#43e0b4">
	        		<Button 
	        		    android:id="@+id/leftColorBlock"
	        		    android:layout_width="75dip"
	        		    android:layout_height="match_parent"
	        		    android:background="#eee"
	        		    /> 
	        </RelativeLayout>                  
	    </LinearLayout>
	    
	    <RelativeLayout 
	        android:id="@+id/InfoBlock"
	        android:layout_width="match_parent"
	        android:layout_height="fill_parent">
	        
	        <LinearLayout 
		        android:id="@+id/loginInfoBlock"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical"
		        android:layout_alignParentBottom="true"
		        android:layout_marginBottom="10dip">
		        <AutoCompleteTextView
		            android:id="@+id/loginEmail"
		            android:inputType="textEmailAddress" 
		            android:layout_width="200dip"
		            android:layout_height="wrap_content"
		            android:singleLine="true"
		            android:layout_gravity="center"
		            android:textSize="15sp"
		            android:hint="邮箱"/>
		        <EditText 
		            android:id="@+id/loginPwd"
		            android:layout_width="200dip"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center"
		            android:singleLine="true"
		            android:textSize="15sp"
		            android:inputType="textPassword" 
		            android:hint="密码"/>
		        <LinearLayout 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center"
		            android:orientation="horizontal">
			            <CheckBox 
			                android:id="@+id/loginRemember"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:checked="true"/>
				        <TextView 
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:textSize="15sp"
				            android:text="记住密码"/>
		        </LinearLayout>
		        
		        <Button 
		            android:id="@+id/loginBtn"
		            android:layout_width="120dip"
		            android:layout_height="30dip"
		            android:layout_marginTop="10dip"
		            android:layout_gravity="center"
		            android:textColor="#ffffff"
		            android:background="@drawable/login"
		            android:text="Login"/>
		    </LinearLayout>
		    	       
	    </RelativeLayout>
    </LinearLayout>
     
</RelativeLayout>
