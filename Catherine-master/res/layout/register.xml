<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:id="@+id/allBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <LinearLayout 
	        android:id="@+id/topBlock"
	        android:layout_width="match_parent"
	        android:layout_height="150dip"
	        android:orientation="vertical"
	        >
	        <RelativeLayout
	            android:id="@+id/topLoginBlock"
	            android:layout_width="match_parent"
	            android:layout_height="130dip"
	            android:background="#3ecc9d"
	            android:orientation="horizontal">		            
               	
               	<TextView
                    android:id="@+id/loginhint"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"		 
		            android:textSize="15sp"       
		            android:textColor="#ffffff" 
		            android:text="@string/loginhint" 
		            android:layout_alignParentBottom="true"
		            android:layout_alignParentRight="true"
		            android:padding="5dip"/>		
           
               	<TextView
               	    android:id="@+id/regText"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="48sp"  
	                android:textColor="#ffffff" 
	                android:text="Register" 
	                android:layout_alignParentBottom="true"
					android:layout_centerHorizontal="true"/>
		                       
	        </RelativeLayout>
	        
	        <RelativeLayout 
	            android:id="@+id/secondBlock"
	            android:layout_width="match_parent"
	            android:layout_height="20dip"
	            android:background="#43e0b4">
	        		<Button 
	        		    android:id="@+id/rightColorBlock"
	        		    android:layout_width="75dip"
	        		    android:layout_height="match_parent"
	        		    android:background="#eee"
	        		    android:layout_alignParentRight="true"
	        		    />
	        </RelativeLayout>                  
	    </LinearLayout>
	    
	    <RelativeLayout 
	        android:id="@+id/InfoBlock"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content">	        
		    
	        <LinearLayout 
	            android:id="@+id/registerInfoBlock"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical"
		        android:layout_marginBottom="10dip"
		        android:layout_alignParentBottom="true">
	            <EditText 
	                android:id="@+id/regEmail"
		            android:layout_width="200dip"
		            android:layout_height="wrap_content"
		            android:singleLine="true"
		            android:layout_gravity="center"
		            android:textSize="15sp"
		            android:hint="邮箱"/>
	            <EditText 
	                android:id="@+id/regUName"
		            android:layout_width="200dip"
		            android:layout_height="wrap_content"
		            android:singleLine="true"
		            android:layout_gravity="center"
		            android:textSize="15sp"
		            android:layout_marginTop="5dip"
		            android:hint="用户名"/>
		        <EditText 
		            android:id="@+id/regPwd"
		            android:layout_width="200dip"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center"
		            android:singleLine="true"
		            android:textSize="15sp"
		            android:inputType="textPassword" 
		            android:layout_marginTop="5dip"
		            android:hint="密码"/>
		        <EditText 
		            android:id="@+id/regPwdAgain"
		            android:layout_width="200dip"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center"
		            android:singleLine="true"
		            android:textSize="15sp"
		            android:inputType="textPassword" 
		            android:layout_marginTop="5dip"
		            android:hint="确认密码"/>
		        <RadioGroup 
			        android:id="@+id/reg_genderGroup"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center"
			        android:orientation="horizontal"
			            >			        
			    	<RadioButton
			        	android:id="@+id/reg_genderMan"
			        	android:layout_width="wrap_content"
			        	android:layout_height="wrap_content"
			        	android:text="男" 
			        	android:checked="true"/>			
			    	<RadioButton
			        	android:id="@+id/reg_genderWoman"
			        	android:layout_width="wrap_content"
			        	android:layout_height="wrap_content"
			        	android:layout_marginLeft="30dip"
			        	android:text="女" />   	   	
			    </RadioGroup>    
		        <Button 
		            android:id="@+id/regBtn"
		            android:layout_width="120dip"
		            android:layout_height="30dip"
		            android:layout_gravity="center"
		            android:textColor="#ffffff"
		            android:background="@drawable/login"
		            android:text="Register"/>
	        </LinearLayout>
	    </RelativeLayout>
    </LinearLayout>
     
</RelativeLayout>
