<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/activity_request_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_request_subject"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/activity_request_time"
            android:text="TextView" />

        <TextView
            android:id="@+id/apply_for_activity_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="新的活动邀请！" />

        <TextView
            android:id="@+id/activity_request_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/activity_request_subject"
            android:layout_below="@+id/activity_request_subject"
            android:text="TextView" />

        <TextView
            android:id="@+id/activity_request_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/apply_for_activity_subject"
            android:text="TextView" />

    </RelativeLayout>

</LinearLayout>
