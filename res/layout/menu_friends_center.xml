<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible" >

        <TextView
            android:id="@+id/TextView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@drawable/side" />

        <EditText
            android:id="@+id/menu_friend_center_searchmyfriend"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="7000"
            android:focusable="false"
            android:focusableInTouchMode="false">

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/menu_friend_center_searchmyfriendBtn"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/search" />

        <Button
            android:id="@+id/menu_friend_center_recommendfriendBtn"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0"
            android:text="好友推荐" />
    </LinearLayout>

    <Button
        android:id="@+id/menu_friend_center_notificationBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="好友通知" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ListView
            android:id="@+id/menu_friend_center_friendlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
        
        <com.app.widget.LetterSidebar
            android:id="@+id/lettersidebar" 
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</LinearLayout>
